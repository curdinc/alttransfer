{
  "name": "@alttransfer/cross-chain-payment-react-sdk",
  "version": "0.0.0",
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup src/index.tsx --env.ESM_ONLY true --external react",
    "build-packages": "pnpm build",
    "dev": "tsup src/index.tsx --env.ESM_ONLY true --external react --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@alttransfer/tsconfig": "^0.0.0",
    "@tanstack/eslint-plugin-query": "^4.29.9",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.29.0",
    "eslint-config-alttransfer": "^0.0.0",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "tsup": "^7.0.0",
    "typescript": "^5.1.3",
    "viem": "~1.1.6",
    "wagmi": "^1.2.1"
  },
  "dependencies": {
    "@alttransfer/cross-chain-payment-core": "^0.0.0",
    "@radix-ui/react-dialog": "^1.0.4",
    "@tanstack/react-query": "^4.29.15",
    "lucide-react": "^0.252.0"
  },
  "peerDependencies": {
    "viem": "~1.1.6",
    "wagmi": "^1.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
